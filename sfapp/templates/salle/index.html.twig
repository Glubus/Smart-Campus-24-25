{% extends 'base.html.twig' %}

{% block title %}Hello SalleController!{% endblock %}

{% block body %}
    <a class="btn btn-primary margin-10" href="{{ path('app_page_acceuil')}}" role="button" style="margin: 10px">Retour</a>
    <div class="container my-5">
        <h1 class="text-center mb-4">Salles</h1>
        <div class="center mb-4" style="max-width: 100%;">
            <table class="salle table table-striped table-bordered text-center align-middle">
                <thead>
                <tr class="table-dark">
                    <th>Nom</th>
                    <th>Batiment</th>
                    <th>Etage</th>
                    <th>Num√©ro de salle</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for salle in salles %}
                        <tr class="text-center align-middle">
                            <td  class="nom">
                                {{ noms[loop.index0] }}
                            </td>
                            <td  class="bat">
                                Batiment {{ salle.batiment.nom }}
                            </td>
                            <td  class="etage">
                                {{ salle.etage.value }}
                            </td>
                            <td class="numSalle">
                                {{ salle.numero }}
                            </td>
                            <td class="supprimer" style="width: 10%">
                                <a class="btn btn-outline-danger" href="{{ path('app_salle_delete') }}?salle={{ salle.id }}" role="button">Supprimer</a>
                            </td>
                        </tr>
                {% endfor %}
                </tbody>
            </table>
            <a class="btn btn-primary" href="{{ path('app_salle_create')}}" role="button">Ajouter une salle</a>
        </div>
    </div>
{% endblock %}