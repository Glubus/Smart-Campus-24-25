{# templates/detail_plan/list.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Liste des plans{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1>Liste des plans</h1>
        <div class="d-flex justify-content-end align-items-center">
            <a class="btn btn-primary ml-3" href="{{ path('app_lier_ajout') }}" role="button">Ajouter une salle</a>
        </div>
        {% if plans is not empty %}
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Système d'acquisition</th>
                    <th>Salle</th>
                    <th>Date d'ajout</th>
                </tr>
                </thead>
                <tbody>
                {% for plan in plans %}
                    <tr>
                        <td>{{ plan.sa.nom }}</td> {# Affiche le nom du système d'acquisition #}
                        <td>{{ plan.Salle.getNom }}</td> {# Affiche le nom de la salle #}
                        <td>{{ plan.dateAjout ? plan.dateAjout|date('d/m/Y') : 'Non défini' }}</td>
                        <td style="width: 10%">
                            <a href="{{ path("app_lier_suppression", { id : plan.id }) }}" class="btn btn-outline-danger">
                                Supprimer
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>Aucun plan trouvé.</p>
            <a class="btn btn-primary" href="{{ path('app_lier_ajout')}}" role="button">Ajouter une assignation</a>
        {% endif %}
    </div>
{% endblock %}
