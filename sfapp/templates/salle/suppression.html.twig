{% extends 'base.html.twig' %}
{% block title %}Supprimer une salle{% endblock %}

{% block body %}
    <div class="container my-5" style="width: 40%">
        <h1 class="text-center mb-4">
            {% if salles|length > 1 %}
                Salles sélectionnées: {{ salles|join(', ') }}
            {% else %}
                Salle sélectionnée: {{ salles|first }}
            {% endif %}
        </h1>
        <p>Êtes-vous sûr de vouloir supprimer ces salles ?</p>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-primary" style="margin-right: 10px; margin-top: 10px">Supprimer</button>
        <a class="btn btn-primary" href="{{ path('app_salle') }}" style="margin-right: 10px; margin-top: 10px">Annuler</a>
    </div>
{% endblock %}
