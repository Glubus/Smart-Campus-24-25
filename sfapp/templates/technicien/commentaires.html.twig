{% extends 'base.html.twig' %}

{% block title %}Technicien {{ app.user.username }}{% endblock %}

{% block body %}
    <div class="container my-5">
        <div>
        <h1 class="text-center mb-4">Bienvenue, {{ app.user.username }}</h1>
            <!-- Main Content -->
            <div class="col-md-9">
                <!-- Add a Comment -->
                <div class="mb-4">
                    <h3>Ajouter un commentaire</h3>

                    {{ form_start(form) }}

                    <div class="mb-3">
                        <label for="salle" class="form-label">Choisissez une salle</label>
                        {{ form_widget(form.salle, {
                            'attr': {
                                'class': 'form-select',
                                'id': 'salle',
                            }
                        }) }}
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Ajouter un commentaire</label>
                        {{ form_widget(form.description, {
                            'attr': {
                                'class': 'form-control',
                                'rows': 3,
                                'placeholder': 'Écrivez votre commentaire ici...'
                            }
                        }) }}
                    </div>

                    <div class="mb-3">
                        {{ form_widget(form.submit, {
                            'attr': {
                                'class': 'btn btn-success d-flex align-items-center'
                            }
                        }) }}
                    </div>

                    {{ form_end(form) }}
                </div>
                </div>

                <!-- List of Comments -->
                <div>
                    <h3>Commentaires</h3>

                    {% for tache in taches %}
                        {% if tache.salle.nom in sallesIssues %}
                            <div style="border-bottom: 1px solid #ddd; padding: 5px; display: flex; justify-content: space-between; align-items: center;">
                                <div>
                                    {{ tache.technicien.nom }}, {{ tache.dateAjout|date('Y-m-d H:i') }}
                                    <div style="padding: 10px">
                                        {{ tache.salle.nom }} : {{ tache.description }}
                                    </div>
                                </div>
                                {% if tache.technicien.id == technicien.id %}
                                    <!-- Ajoutez ici le bouton "Supprimer" si nécessaire -->
                                    {  <form method="post" action="{{ path('app_technicien_commentaire_supprimer', {'id': tache.id}) }}"
                                             onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire ?');"
                                             style="margin-left: 15px;">
                                    <input type="hidden" name="_token" value="{{ csrf_token(tache.id) }}">
                                    <button type="submit" class="btn btn-danger" style="font-size: 14px;">Supprimer</button>
                                </form>
                                    }
                                {% endif %}
                            </div>
                        {% endif %}
                    {% endfor %}
                    <div id="comments-container">
                        <!-- Dynamically loaded comments -->
                    </div>
                    <button id="voir-plus" class="btn btn-primary" data-id="{{ app.user.id }}" data-offset="0">Voir plus</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('voir-plus').addEventListener('click', function () {
            const btn = this;
            const id = btn.getAttribute('data-id');
            const offset = parseInt(btn.getAttribute('data-offset'));

            fetch(`/technicien/${id}/commentaires-ajax?offset=${offset + 5}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    return response.json();
                })
                .then(data => {
                    if (!Array.isArray(data) || data.length === 0) {
                        alert('Aucun commentaire à afficher.');
                        return;
                    }

                    const commentsContainer = document.getElementById('comments-container');
                    data.forEach(comment => {
                        const row = document.createElement('div');
                        row.setAttribute('style', 'border-bottom: 1px solid #ddd; padding: 5px; display: flex; justify-content: space-between; align-items: center;');

                        // Format date and time in French
                        const formattedDate = new Intl.DateTimeFormat('fr-FR', {
                            dateStyle: 'short',
                            timeStyle: 'short'
                        }).format(new Date(comment.dateAjout));

                        row.innerHTML = `
                        <div>
                            ${comment.nomTech}, ${formattedDate}
                            <div style="padding: 10px">
                                ${comment.description}
                            </div>
                        </div>
                        <form method="post" action="/technicien/${id}/commentaire-supprimer/${comment.id}"
                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire ?');"
                              style="margin-left: 15px;">
                            <input type="hidden" name="_token" value="${comment.id}">
                            <button type="submit" class="btn btn-danger" style="font-size: 14px;">Supprimer</button>
                        </form>
                    `;
                        commentsContainer.appendChild(row);
                    });

                    // Update the offset
                    btn.setAttribute('data-offset', offset + data.length);
                })
                .catch(error => {
                    console.error('Erreur AJAX :', error);
                    alert('Une erreur est survenue lors du chargement des commentaires.');
                });
        });

    </script>

{% endblock %}
