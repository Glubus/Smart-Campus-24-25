{% extends 'base.html.twig' %}
{% block title %}Diagnostic de {{ batiment }}{% endblock %}
{% block body %}
    <link rel="stylesheet" href="{{ asset('styles/styles.css') }}">
    <header>
        <h1>Outil de Diagnostic - {{ batiment }}</h1>
    </header>
    <main>
        <section class="statistiques-globales">
            <h2>Statistiques Globales</h2>

            <div class="cards-diagnostics">
                <div class="card-diagnostic valeurCard co2">
                    <h3>CO₂ du bâtiment (ppm)</h3>
                    <i class="fas fa-cloud icon-co2"></i>
                    <div class="co2-header">
                        <p class="current-co2">
                            <span>{{ co2.lastData }} ppm</span>
                        </p>
                    </div>
                    <div class="co2-stats">
                        <p>
                            <i class="fas fa-chart-line icon-mean"></i>
                            <strong>Moyenne :</strong> {{ co2.mean }} ppm
                        </p>
                        <p>
                            <i class="fas fa-signal icon-ecarttype"></i>
                            <strong>Écart Type :</strong> {{ co2.ecarttype }} ppm
                        </p>
                    </div>
                    {% if co2.ecarttype > 100 %}
                        <p class="co2-warning">
                            ⚠️ Attention ! Le CO₂ varie beaucoup (écart type > 100)
                        </p>
                    {% endif %}
                </div>
                <div class="card-diagnostic valeurCard temp">
                    <h3>Température du bâtiment (°C)</h3>
                    <i class="fas fa-thermometer-half icon-temp"></i>
                    <div class="temp-header">
                        <p class="current-temp">
                            <span>{{ temp.lastData }} °C</span>
                        </p>
                    </div>
                    <div class="temp-stats">
                        <p>
                            <i class="fas fa-chart-line icon-mean"></i>
                            <strong>Moyenne :</strong> {{ temp.mean }} °C
                        </p>
                        <p>
                            <i class="fas fa-signal icon-ecarttype"></i>
                            <strong>Écart Type :</strong> {{ temp.ecarttype }} °C
                        </p>
                    </div>
                    <p><strong>Température Extérieure :</strong> {{ tempOutside }}°C</p>
                    {% if temp.ecarttype > 2 %}
                        <p class="warning">
                            ⚠️ Attention ! La température varie beaucoup (écart type > 2)
                        </p>
                    {% endif %}
                </div>

                <div class="card-diagnostic valeurCard humidite">
                    <h3>Humidité du bâtiment (%)</h3>
                    <i class="fas fa-tint icon-hum"></i>
                    <div class="hum-header">
                        <p class="current-hum">
                            <span>{{ hum.lastData }}%</span>
                        </p>
                    </div>
                    <div class="hum-stats">
                        <p>
                            <i class="fas fa-chart-line icon-mean"></i>
                            <strong>Moyenne :</strong> {{ hum.mean }}%
                        </p>
                        <p>
                            <i class="fas fa-signal icon-ecarttype"></i>
                            <strong>Écart Type :</strong> {{ hum.ecarttype }}%
                        </p>
                    </div>
                    {% if hum.ecarttype > 5 %}
                        <p class="hum-warning">
                            ⚠️ Attention ! L'humidité varie beaucoup (écart type > 5)
                        </p>
                    {% endif %}
                </div>
            </div>
        </section>

        <!-- Options de période -->

        <!-- Graphiques et liste des SA -->
        <section class="dashboard-content">
            <!-- Colonne des graphiques (vertical) -->
            <div class="left-column">
                <div class="data-header">

                    <h1<i class="fas fa-chart-line icon-mean"></i>Visualisation des Données</h1>

                        <select id="timePeriod" onchange="updateCharts()">
                            <option value="1">Dernier Jour</option>
                            <option value="7" selected>Derniers 7 Jours</option>
                            <option value="30">Derniers 30 Jours</option>
                        </select>
                </div>
                <canvas id="co2Chart" data-chart-data="{{ co2_data }}"></canvas>
                <canvas id="tempChart" data-chart-data="{{ temp_data }}"></canvas>
                <canvas id="humChart" data-chart-data="{{ hum_data }}"></canvas>
            </div>

            <!-- Colonne des SA bizarres -->
            <div class="right-column"><div class="data-header">

                    <h1>SA avec des verifications necessaires</h1>
                </div>
                {% if weirdData is empty %}
                    <div class="alert alert-success" role="alert">
                        Toutes les salles sont normales, aucune anomalie détectée !
                    </div>
                {% else %}
                    <table class="table table-bordered table-striped">
                        <thead class="thead-dark">
                        <tr>
                            <th>Salle</th>
                            <th>Raison</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for salle, raison in weirdData %}
                            <tr>
                                <td><a href="{{ path('app_diagnostic_salle', {'batiment' : batiment, 'salle' : salle } ) }}">{{ salle }}</a></td>
                                <td>{{ raison }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% endif %}
                <div >
                    <div class="add-comment-section">
                        <h2 class="h4 mb-3">Ajouter un commentaire</h2>
                        <form method="post" action="{{ path('app_technicien_commentaire_ajout', {'id': app.user.id}) }}" class="shadow-sm p-4 rounded bg-light">
                            <input type="hidden" name="batiment" value="{{ batiment }}" />

                            <!-- Sélectionner une salle -->
                            <div class="form-group mb-3">
                                <label for="salle-select" class="form-label">Sélectionner une salle</label>
                                <select name="salle" id="salle-select" class="form-control" required>
                                    <option value="" disabled selected>Choisissez une salle</option>
                                    {% for salle in salles %}
                                        <option value="{{ salle.id }}">{{ salle.nom }}</option>
                                    {% endfor %}
                                </select>
                            </div>

                            <!-- Commentaire -->
                            <div class="form-group mb-3">
                                <label for="description" class="form-label">Commentaire</label>
                                <textarea name="description" id="description" class="form-control" rows="4" placeholder="Écrivez votre commentaire ici..." required></textarea>
                            </div>

                            <!-- Bouton Ajouter -->
                            <div class="text-end">
                                <button type="submit" class="btn btn-success">Ajouter</button>
                            </div>
                        </form>
                    </div>

                    <!-- Section des commentaires -->
                    <div class="comment-section mt-4">
                        <h3>Commentaires du bâtiment {{ batiment }}</h3>

                        <!-- Filtrer par salle -->
                        <div class="filter-salle mb-3">
                            <form method="get" action="{{ path('app_diagnostic_batiment', {'batiment': batiment}) }}">
                                <label for="filter-salle-select" class="form-label">Filtrer par salle</label>
                                <select name="salle" id="filter-salle-select" class="form-control" onchange="this.form.submit()">
                                    <option value="">Toutes les salles</option>
                                    {% for salle in salles %}
                                        <option value="{{ salle.id }}" selected>
                                            {{ salle.nom }}
                                        </option>
                                    {% endfor %}
                                </select>
                            </form>
                        </div>

                        <!-- Liste des interventions -->
                        {% if detailInterventions|length > 0 %}
                            {% for intervention in detailInterventions %}
                                <div style="border-bottom: 1px solid #ddd; padding: 10px; display: flex; justify-content: space-between; align-items: center;">
                                    <div>
                                        <strong>{{ intervention.technicien.nom }}</strong>, {{ intervention.dateAjout|date('Y-m-d H:i') }}
                                        <div style="padding: 10px">
                                            Salle <strong>{{ intervention.salle.nom }}</strong> : {{ intervention.description }}
                                        </div>
                                    </div>

                                    <!-- Bouton Supprimer (si utilisateur autorisé) -->
                                    {% if intervention.technicien.id == app.user.id or is_granted('ROLE_CHARGE_DE_MISSION') %}
                                        <form method="post" action="{{ path('app_technicien_commentaire_supprimer', {'id': intervention.id}) }}"
                                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire ?');"
                                              style="margin-left: 15px;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ intervention.id) }}">
                                            <button type="submit" class="btn btn-danger" style="font-size: 14px;">Supprimer</button>
                                        </form>
                                    {% endif %}
                                </div>
                            {% endfor %}
                        {% else %}
                            <div style="padding: 10px; text-align: center;">
                                Aucun commentaire disponible pour ce bâtiment ou cette salle.
                            </div>
                        {% endif %}
                    </div>
                </div>

            </div>
        </section>
        <!-- Élément contenant les données JSON -->
    </main>
{% endblock %}

{% block stylesheet %}
    <style>

    </style>
{% endblock %}
{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-annotation"></script>
    <script>
        const batimentName = "{{ batiment }}"; // Transmet dynamiquement le nom du bâtiment au script externe
    </script>
    <script src="{{ asset('js/dashboard.js') }}"></script>
{% endblock %}
