{% extends 'base.html.twig' %}

{% block title %}Technicien {{ app.user.username }}{% endblock %}

{% block body %}
    <div class="container mx-auto py-10 px-4">
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-gray-800">Bienvenue, {{ app.user.username }}</h1>
        </div>

        <!-- Form Section -->
        <div class="bg-white shadow-md rounded-lg p-6 mb-10">
            <h2 class="text-2xl font-semibold text-gray-700 mb-4">Ajouter un commentaire</h2>

            {{ form_start(form) }}

            <div class="mb-6">
                <label for="salle" class="block text-sm font-medium text-gray-700 mb-2">Choisissez une salle</label>
                {{ form_widget(form.salle, {
                    'attr': {
                        'class': 'form-select block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm',
                        'id': 'salle',
                    }
                }) }}
            </div>

            <div class="mb-6">
                <label for="description" class="block text-sm font-medium text-gray-700 mb-2">Ajouter un commentaire</label>
                {{ form_widget(form.description, {
                    'attr': {
                        'class': 'form-control block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm',
                        'rows': 3,
                        'placeholder': 'Écrivez votre commentaire ici...'
                    }
                }) }}
            </div>

            <div>
                {{ form_widget(form.submit, {
                    'attr': {
                        'class': 'btn bg-green-500 hover:bg-green-600 text-white font-medium py-2 px-4 rounded-md'
                    }
                }) }}
            </div>

            {{ form_end(form) }}
        </div>

        <!-- Comments Section -->
        <div>
            <h2 class="text-2xl font-semibold text-gray-700 mb-4">Commentaires</h2>

            {% for tache in taches %}
                {% if tache.salle.nom in sallesIssues %}
                    <div class="border-b border-gray-300 py-4 flex justify-between items-start">
                        <div>
                            <p class="text-sm text-gray-600 mb-2">{{ tache.technicien.nom }}, {{ tache.dateAjout|date('Y-m-d H:i') }}</p>
                            <p class="text-gray-800">{{ tache.salle.nom }} : {{ tache.description }}</p>
                        </div>
                        {% if tache.technicien.id == technicien.id %}
                            <form method="post" action="{{ path('app_technicien_commentaire_supprimer', {'id': tache.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token(tache.id) }}">
                                <button type="submit" class="btn bg-red-500 hover:bg-red-600 text-white font-medium py-2 px-4 rounded-md">Supprimer</button>
                            </form>
                        {% endif %}
                    </div>
                {% endif %}
            {% endfor %}

            <div id="comments-container"></div>
            <button id="voir-plus" class="btn bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded-md mt-4" data-id="{{ app.user.id }}" data-offset="0">Voir plus</button>
        </div>
    </div>
    <script>
        document.getElementById('voir-plus').addEventListener('click', function () {
            const btn = this;
            const id = btn.getAttribute('data-id');
            const offset = parseInt(btn.getAttribute('data-offset'));

            fetch(`/technicien/${id}/commentaires-ajax?offset=${offset + 5}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    return response.json();
                })
                .then(data => {
                    if (!Array.isArray(data) || data.length === 0) {
                        alert('Aucun commentaire à afficher.');
                        return;
                    }

                    const commentsContainer = document.getElementById('comments-container');
                    data.forEach(comment => {
                        const row = document.createElement('div');
                        row.setAttribute('style', 'border-bottom: 1px solid #ddd; padding: 5px; display: flex; justify-content: space-between; align-items: center;');

                        // Format date and time in French
                        const formattedDate = new Intl.DateTimeFormat('fr-FR', {
                            dateStyle: 'short',
                            timeStyle: 'short'
                        }).format(new Date(comment.dateAjout));

                        row.innerHTML = `
                        <div>
                            ${comment.nomTech}, ${formattedDate}
                            <div style="padding: 10px">
                                ${comment.description}
                            </div>
                        </div>
                        <form method="post" action="/technicien/${id}/commentaire-supprimer/${comment.id}"
                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire ?');"
                              style="margin-left: 15px;">
                            <input type="hidden" name="_token" value="${comment.id}">
                            <button type="submit" class="btn btn-danger" style="font-size: 14px;">Supprimer</button>
                        </form>
                    `;
                        commentsContainer.appendChild(row);
                    });

                    // Update the offset
                    btn.setAttribute('data-offset', offset + data.length);
                })
                .catch(error => {
                    console.error('Erreur AJAX :', error);
                    alert('Une erreur est survenue lors du chargement des commentaires.');
                });
        });

    </script>

{% endblock %}
