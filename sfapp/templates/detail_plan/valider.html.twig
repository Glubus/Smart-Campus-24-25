{% extends 'base.html.twig' %}

{% block title %}Supprimer une attribution {% endblock %}

{% block body %}
    <link rel="stylesheet" href="{{ asset('/styles/detail_plan/common.scss') }}">
    <div class="container my-5 card-body" style="width: 50%">
        <div class="card shadow full-width">
            <div class="card-body">

                {% if detail_plan.etatSA == 'installation' %}
                    <h1 class="text-center mb-4"> {{ "Marquer l'installation de "  ~ detail_plan.SA.getNom ~ ' dans ' ~ detail_plan.Salle.getNom ~ ' comme fini ?'}}</h1>
                {% elseif detail_plan.etatSA == 'desinstallation'%}
                    <h1 class="text-center mb-4"> {{ 'Desinstallation de ' ~ detail_plan.SA.getNom ~ ' dans ' ~ detail_plan.Salle.getNom}}</h1>
                    <p>ÃŠtes vous sur de vouloir valider la demande de desinstallation ? (La demande sera supprimee dans la base de donnees) </p>
                {% endif %}

                <form method="post">
                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('app_lier_liste', {'nom':detail_plan.plan.nom, 'batiment':detail_plan.salle.etage.batiment.id})}}" class="btn btn-secondary mr-1 mt-1 action" role="button">Annuler</a>
                        <button type="submit" class="btn btn-primary mr-1 mt-1 action" role="button">Continue</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
