{% extends 'base.html.twig' %}

{% block title %}Lister Salle{% endblock %}

{% block body %}
    <link rel="stylesheet" href="/css/listesas.css">
    <h1 class="mainTitle">Liste des sas</h1>
    <div class="all">
        <aside class="rechercheBlock">
            <h2 class="titreRecherche">Rechercher</h2>
            <article class="filtresRecherche">
                <div class="barreRech">
                    {{ form_start(form, {'attr': {'class': 'd-flex'}}) }}
                    <div class="form-group mr-2">
                        {{ form_row(form.nom) }}
                    </div>
                    <button type="submit" class="btn btn-primary">Rechercher</button>
                    {{ form_end(form) }}
                </div>
                <h3 class="trier">Trier</h3>
                <button class="btnTri">Date de création</button>
                <button class="btnTri">Ordre alphabétique</button>
            </article>
        </aside>

        <main class="liste">
            <h2 class="titreListe">Résultats</h2>

            <div class="btns">
                <a href="/sa/ajout"><button class="btnAjout">Ajouter</button></a>
                <button class="btnSuppr hidden" id="btnSuppr">Supprimer</button>
            </div>

            {% for sa in liste_SA %}
                <a href="/sa/{{ sa.id }}">
                    <article class="saBlock">
                        <div class="infossa">
                            <input type="checkbox" class="checkbox" value="{{ sa.id }}"/>
                            <div class="saSaNom">
                                <h3>{{ sa.nom }}</h3>
                                {% if sa.plans is not null %}
                                    {% for plan in sa.plans %}
                                        <h3>{{ plan.sa.nom }}</h3>
                                    {% endfor %}
                                {% endif %}
                            </div>
                            <div class="BatimentEtage">
                                <p>Nom {{ sa.nom }}</p>

                            </div>
                        </div>
                        <div class="DetailsModif">
                            <a href="/sa/{{ sa.id }}"><button class="btnDetailSA">Détails SA</button></a>
                            <a href="/modifiersa?id="{{ sa.id }}><button class="btnModif">Modifier</button></a>
                        </div>
                    </article>
                </a>
            {% endfor %}
            <button class="btnAffPl">Afficher plus</button>
        </main>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Ciblez les checkboxes et le bouton
            const checkboxes = document.querySelectorAll('.checkbox');
            const deleteButton = document.getElementById('btnSuppr');

            // Fonction pour vérifier si une checkbox est cochée
            function toggleDeleteButton() {
                const isAnyChecked = Array.from(checkboxes).some(checkbox => checkbox.checked);
                if (isAnyChecked) {
                    deleteButton.classList.remove('hidden'); // Affiche le bouton
                } else {
                    deleteButton.classList.add('hidden'); // Masque le bouton
                }
            }

            // Ajoutez un écouteur d'événement à chaque checkbox
            checkboxes.forEach(checkbox => {
                checkbox.addEventListener('change', toggleDeleteButton);
            });

            deleteButton.addEventListener('click', function () {
                // Crée un formulaire caché
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '/sa/supprimer-selection'; // L'URL vers votre route Symfony

                // Ajoutez les checkboxes cochées au formulaire
                checkboxes.forEach(checkbox => {
                    if (checkbox.checked) {
                        const input = document.createElement('input');
                        input.type = 'hidden';
                        input.name = 'selected_sas[]';
                        input.value = checkbox.value; // Assurez-vous que chaque checkbox a une valeur correcte
                        form.appendChild(input);
                    }
                });

                // Ajoutez le formulaire à la page et soumettez-le
                document.body.appendChild(form);
                form.submit();
            });

            // Vérifiez initialement (au cas où une checkbox est pré-cochée)
            toggleDeleteButton();
        });
    </script>
{% endblock %}

