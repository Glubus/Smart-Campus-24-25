{% extends 'base.html.twig' %}

{% block title %}Liste des bâtiments{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="text-center">Liste des Bâtiments</h1>
        <div class="d-flex justify-content-end align-items-center mb-4">
            <a href="{{ path('app_batiment_ajouter') }}" class="btn btn-primary">Ajouter un bâtiment</a>
        </div>

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {% if message.batimentId is defined %}
                    <a href="{{ path('app_salle_supprimer_liees', { id: message.batimentId }) }}" class="btn btn-danger btn-sm">
                        Supprimer les salles liées
                    </a>
                {% endif %}
            </div>
        {% endfor %}



        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Adresse</th>
                    <th scope="col">Nombre d'étages</th>
                    <th scope="col">Supprimer</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for batiment in batiments %}
                    <tr>
                        <td class="nom">{{ batiment.nom }}</td>
                        <td>{{ batiment.adresse }}</td>
                        <td>{{ batiment.nbEtages }}</td>
                        <td style="width: 10%">
                            <a class="btn btn-outline-success" href="{{ path('app_batiment_ajouter') }}?batiment={{ batiment.id }}" role="button">Modifier</a>
                        </td>
                    <td>
                        <a href="{{ path("app_batiment_suppression", { id : batiment.id }) }}" class="btn btn-outline-danger">Supprimer</a>
                    </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="text-center">Aucun bâtiment trouvé.</td>
                    </tr>

                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
