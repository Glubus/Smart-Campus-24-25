{% extends 'template/ajouter.html.twig' %}

{%  block javascripts %}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var batimentSelect = document.getElementById('form_Batiment');
        if(batimentSelect){
            batimentSelect.addEventListener('change', function() {
                event.preventDefault();
                window.location.href = `?batiment=${batimentSelect.value}`;  // Trigger the form submission
            });
        }
    });

</script>

{% endblock %}