{% extends 'base.html.twig' %}

{% block title %}SA - {{ SA.nom }}{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="text-center mb-4">SA - {{ SA.nom }}</h1>
        <div class="d-flex justify-content-between align-items-center mb-4">
            <a class="btn btn-success mt-3" href="{{ path('app_sa_ajout') }}" role="button">Ajouter un SA</a>
        </div>

        <div class="row">
            <!-- Colonne gauche : Détails de l'entité SA -->
            <div class="col-md-6">
                <h3>Détails de SA</h3>
                <ul class="list-group">
                    <li class="list-group-item"><strong>Nom:</strong> {{ SA.nom }}</li>
                        {% if SA.plan is not null %}
                            <li class="list-group-item"><strong>Salle assignée:</strong> {{ SA.plan.Salle.getSalleNom }} (ID: {{ SA.plan.Salle.id }})</li>
                        {% else %}
                            <li class="list-group-item"><strong>Pas de salle assignée</strong></li>
                        {% endif %}
                </ul>

                {% if SA.plan is null %}
                    <a href="{{ path('app_plan', {'sa_id': SA.id}) }}" class="btn btn-primary mt-3">Assigner une salle</a>
                {% endif %}
            </div>

            <!-- Colonne droite : Informations supplémentaires -->
            <div class="col-md-6">
                <h3>Informations supplémentaires</h3>
                <h4 >Capteurs associés :</h4>
                <table class="table table-bordered">
                    <thead class="table-dark">
                    <tr>
                        <th>Nom</th>
                        <th>Type</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for capteur in SA.capteurs %}
                        <tr>
                            <td>{{ capteur.nom }}</td>
                            <td>{{ capteur.type.value }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
