{% extends 'base.html.twig' %}

{% block title %}Liste des bâtiments{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="text-center mb-4">Liste des bâtiments</h1>

        <a href="{{ path('app_batiment_ajouter') }}" class="btn btn-primary mb-4">Ajouter un bâtiment</a>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Adresse</th>
            </tr>
            </thead>
            <tbody>
            {% for batiment in batiments %}
                <tr>
                    <td>{{ batiment.id }}</td>
                    <td>{{ batiment.nom }}</td>
                    <td>{{ batiment.adresse }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center">Aucun bâtiment trouvé.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
