{% extends 'template/infos.html.twig' %}

{% block liste %}
    <li class="list-group-item">
        <strong>Nom :</strong> {{ item.nom }}
    </li>
    <li class="list-group-item">
        <strong>Adresse :</strong> {{ item.adresse }}
    </li>
    <li class="list-group-item">
        <strong>Nombre d'étages :</strong> {{ item.nbEtages }}
    </li>
    <li class="list-group-item">
        <strong>Nombre de salle attaché :</strong>
    </li>

{% endblock %}
