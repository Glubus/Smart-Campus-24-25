{% extends 'base.html.twig' %}

{% block title %}SA - {{ SA.nom }}{% endblock %}

{% block body %}
    <div class="container my-5">
        <a class="btn btn-secondary mb-3" href="{{ path('app_sa_liste') }}" role="button">Retour</a>

        <h1 class="text-center mb-4">SA - {{ SA.nom }}</h1>

        <div class="row">
            <!-- Colonne gauche : Détails de l'entité SA -->
            <div class="col-md-6">
                <h3>Détails de SA</h3>
                <ul class="list-group">
                    <li class="list-group-item"><strong>Nom:</strong> {{ SA.nom }}</li>
                    {% if salle %}
                        <li class="list-group-item"><strong>Salle associée:</strong> {{ salle.getSalleNom() }}</li>
                    {% else %}
                        <li class="list-group-item"><strong>Salle associée:</strong> Aucune salle associée.</li>
                    {% endif %}
                </ul>
                    <a href="" class="btn btn-primary mt-3">Assigner une salle</a>

            </div>

            <!-- Colonne droite : Informations supplémentaires -->
            <div class="col-md-6">
                <h3>Informations supplémentaires</h3>
                <h4 >Capteurs associés :</h4>
                <table class="table table-bordered">
                    <thead class="table-dark">
                    <tr>
                        <th>Nom</th>
                        <th>Type</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for capteur in SA.capteurs %}
                        <tr>
                            <td>{{ capteur.nom }}</td>
                            <td>{{ capteur.type.value }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <a class="btn btn-success mt-3" href="{{ path('app_sa_ajout') }}" role="button">Ajouter un SA</a>
    </div>
{% endblock %}
