{% extends 'base.html.twig' %}

{% block title %}Hello SalleController!{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="text-center mb-4">Salles</h1>
        <div class="center mb-4" style="max-width: 100%;">
            <table class="table table-striped table-bordered text-center align-middle">
                <thead>
                <tr class="table-dark">
                    <th class="nom">Nom</th>
                    <th class="col">Batiment</th>
                    <th class="col">Etage</th>
                    <th class="col">Numéro de salle</th>
                    <th class="col">Informations</th>
                    <th></th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for salle in salles %}
                        <tr class="text-center align-middle">
                            <td>
                                {{ noms[loop.index0] }}
                            </td>
                            <td>
                                Batiment {{ salle.batiment.nom }}
                            </td>
                            <td>
                                {{ salle.etage.value }}
                            </td>
                            <td>
                                {{ salle.numero }}
                            </td>
                            <td style="width: 10%">
                                <a class="btn btn-outline-info" href="{{ path('app_salle_infos', { id: salle.id }) }}" role="button">Détails</a>
                            </td>
                            <td style="width: 10%">
                                <a class="btn btn-outline-success" href="{{ path('app_salle_update') }}?salle={{ salle.id }}" role="button">Modifier</a>
                            </td>
                            <td style="width: 10%">
                                <a class="btn btn-outline-danger" href="{{ path('app_salle_delete') }}?salle={{ salle.id }}" role="button">Supprimer</a>
                            </td>
                        </tr>
                {% endfor %}
                </tbody>
            </table>
            <a class="btn btn-primary" href="{{ path('app_salle_create')}}" role="button">Ajouter une salle</a>
        </div>
    </div>
{% endblock %}