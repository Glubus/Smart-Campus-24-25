{% extends 'base.html.twig' %}

{% block title %}Hello SalleController!{% endblock %}

{% block body %}
    <a class="btn btn-primary margin-10" href="{{ path('app_page_acceuil')}}" role="button">Retour</a>
    <div class="container my-5">
        <h1 class="text-center mb-4">Salles</h1>
        <div class="center mb-4" style="max-width: 100%;">
            <table class="table table-striped table-bordered text-center align-middle">
                <thead>
                <tr class="table-dark">
                    <th class="col">Batiment</th>
                    <th class="col">Etage</th>
                    <th class="col">Num√©ro de salle</th>
                </tr>
                </thead>
                <tbody>
                {% for salle in salles %}
                    <tr class="text-center align-middle">
                        <td>{{ salle.batiment.value }}</td>
                        <td>{{ salle.etage.value }}</td>
                        <td>{{ salle.numero }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a class="btn btn-primary" href="{{ path('app_salle_create')}}" role="button">Ajouter une salle</a>
        </div>
    </div>
{% endblock %}