    <script>
        document.addEventListener('DOMContentLoaded', (event) => {
            const ids = ['0metre','5metre', '10metre', '25metre', '50metre', '100metre'];

            document.addEventListener('keydown', (event) => {
                const currentScrollY = window.scrollY;
                const sections = ids.map(id => document.getElementById(id));
                const positions = sections.map(section => section.getBoundingClientRect().top + currentScrollY);

                if (event.key === 'ArrowDown') {
                    event.preventDefault();
                    for (let i = 0; i < positions.length; i++) {
                        if (positions[i] > currentScrollY + 10) { // Add a small offset to ensure it moves to the next section
                            sections[i].scrollIntoView({ behavior: 'smooth' });
                            break;
                        }
                    }
                } else if (event.key === 'ArrowUp') {
                    event.preventDefault();
                    for (let i = positions.length - 1; i >= 0; i--) {
                        if (positions[i] < currentScrollY - 10) { // Add a small offset to ensure it moves to the previous section
                            sections[i].scrollIntoView({ behavior: 'smooth' });
                            break;
                        }
                    }
                }
            });
        });
    </script>

