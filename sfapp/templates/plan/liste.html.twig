{# templates/detail_plan/list.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Liste des plans{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1>Liste des plans</h1>
        <div class="d-flex justify-content-end align-items-center">
            <a class="btn btn-primary ml-3" href="{{ path('app_plan_ajouter') }}" role="button">Ajouter une salle</a>
        </div>
        {% if plans is not empty %}
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Batiment</th>
                    <th>Date d'ajout du Plan</th>
                    <th>Nombre de SA Affecter</th>
                    <th>Nombre de Salle Utiliser</th>
                </tr>
                </thead>
                <tbody>
                {% for plan in plans %}
                    <tr>
                        <td>{{ plan.nom }}</td> {# Affiche le nom du système d'acquisition #}
                        <td>{{ plan.Batiment.nom }}</td> {# Affiche le nom de la salle #}
                        <td>{{ plan.date ? plan.date|date('d/m/Y') : 'Non défini' }}</td>
                        <td>
                            {{ plan.getCountSA() }}
                        </td>
                        <td>
                            {{ plan.getCountSalle() ? plan.getCountSalle() : "0" }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>Aucun plan trouvé.</p>
            <a class="btn btn-primary" href="{{ path('app_lier_ajout')}}" role="button">Ajouter une assignation</a>
        {% endif %}
    </div>
{% endblock %}
