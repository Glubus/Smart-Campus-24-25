{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="form-container">
        <h2 class="text-center mb-4">Ajout d’un technicien</h2>
        {{ form_start(form) }}
        <div class="row mb-3">
            <div class="col">
                <div class="form-group">
                    {{ form_label(form.nom, 'Nom :', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    {{ form_label(form.prenom, 'Prénom :', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col">
                <div class="form-group">
                    {{ form_label(form.adresse, 'Adresse :', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    {{ form_label(form.email, 'Mail :', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col">
                <div class="form-group">
                    {{ form_label(form.roles, 'Fonction', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.roles, {'attr': {'class': 'form-select'}}) }}
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    {{ form_label(form.plainPassword, 'Mots de passe', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-ajouter">Ajouter</button>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}

{% block stylesheet %}
    <style>
        /* Style général du conteneur */
        .form-container {
            background:rgba(255, 255, 255, 0.35);
            border-radius: 10px; /* Coins arrondis */
            padding: 30px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3); /* Ombre pour profondeur */
            max-width: 700px;
            margin: 40px auto; /* Centre le conteneur */
        }

        /* Style des champs input */
        .form-control {
            border: 1px solid #ccc; /* Bordure légère */
            border-radius: 5px; /* Coins légèrement arrondis */
            padding: 10px;
            font-size: 16px;
        }

        /* Espacement entre chaque groupe de formulaire */
        .form-group {
            margin-bottom: 15px;
        }

        /* Style des labels */
        .form-label {
            font-weight: bold;
            font-size: 16px;
            color: #ffffff; /* Couleur noire pour le texte */
        }

        /* Style du bouton */
        .btn-ajouter {
            background-color: #007bff; /* Bleu vif */
            color: #fff; /* Texte blanc */
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            width: 100px;
            margin-top: 15px;
        }

        .btn-ajouter:hover {
            background-color: #0056b3; /* Bleu plus foncé au survol */
        }

        /* Style spécifique pour les champs à deux colonnes */
        .row .col {
            padding: 5px;
        }

        /* Style de fond pour la page */
        body {
            background: linear-gradient(to right, #02162f, #0043c5); /* Dégradé bleu foncé */
            color: #ffffff;
        }
    </style>
{% endblock %}