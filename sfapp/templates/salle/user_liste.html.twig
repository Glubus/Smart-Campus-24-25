                                        <img src="{{ asset('/img/humi.png') }}" class="icon">
                                        <h3 class="value">{{ item.data.hum }}</h3>
                                        <h4 class="unit">%</h4>
                                    </div>
                                </div>
                            {% endif %}
                            <a class="salleUserBtnDetail" href="{{ path('app_salle_user_infos', {'id':item.salle.id}) }}">Voir plus</a>
                        </div>
