{% extends 'base.html.twig' %}

{% block title %}Gestion des Formulaires{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="text-center">Gestion des Entités</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        <div class="row">
            <!-- Formulaire pour Bâtiment -->
            <div class="col-md-6">
                <h3>Ajouter un Bâtiment</h3>
                {{ form_start(batimentForm) }}
                {{ form_widget(batimentForm) }}
                <button type="submit" class="btn btn-primary mt-3">Créer le bâtiment</button>
                {{ form_end(batimentForm) }}
            </div>

            <!-- Formulaire pour Salle -->
            <div class="col-md-6">
                <h3>Ajouter une Salle</h3>
                {{ form_start(salleForm) }}
                {{ form_widget(salleForm) }}
                <button type="submit" class="btn btn-primary mt-3">Créer la salle</button>
                {{ form_end(salleForm) }}
            </div>
        </div>

        <div class="row mt-5">
            <!-- Formulaire pour DetailPlan -->
            <div class="col-md-6">
                <h3>Ajouter un Plan</h3>
                {{ form_start(planForm) }}
                {{ form_widget(planForm) }}
                <button type="submit" class="btn btn-primary mt-3">Créer le plan</button>
                {{ form_end(planForm) }}
            </div>

            <!-- Formulaire pour Système d'Acquisition -->
            <div class="col-md-6">
                <h3>Ajouter un Système d'Acquisition</h3>
                {{ form_start(saForm) }}
                {{ form_widget(saForm) }}
                <button type="submit" class="btn btn-primary mt-3">Créer le système</button>
                {{ form_end(saForm) }}
            </div>
        </div>
    </div>
{% endblock %}
