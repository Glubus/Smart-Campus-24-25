{% extends 'base.html.twig' %}

{% block title %}Ajouter un bâtiment{% endblock %}

{% block body %}
    <div class="container my-5" style="width: 40%">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success" style="margin-top: 10px">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger" style="margin-top: 10px">
                {{ message }}
            </div>
        {% endfor %}

        <h1 class="text-center mb-4">Ajouter un bâtiment</h1>

        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary" style="margin-right: 10px; margin-top: 10px" role="button">Créer le bâtiment</button>
        <a href="{{ path('app_batiment_liste') }}" class="btn btn-secondary" style="margin-right: 10px; margin-top: 10px" role="button">Annuler</a>
        {{ form_end(form) }}
    </div>
{% endblock %}
