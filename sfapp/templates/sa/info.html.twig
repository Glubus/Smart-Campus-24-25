{% extends 'base.html.twig' %}

{% block title %}SA {{ SA.nom }}{% endblock %}
{% block body %}
    <div class="container my-5" >
        <h1 class="text-center mb-4">SA TESTSA</h1>

        <div class="row" style="border-top:2px solid #ddd; padding: 15px;">
            <!-- Left Sidebar -->
            <div class="col-md-3" style="background-color: #C0C0C0 ; border-right: 2px solid #ddd; padding: 15px;">
                <!-- Capteurs -->
                <div class="mb-4">
                    <h3>Capteurs</h3>
                    <div class="list-group">
                        {% for capteur in SA.capteurs %}
                            <div class="list-group-item">
                                <strong>{{ capteur.nom }}</strong>
                            </div>
                        {% else %}
                            <div class="list-group-item">Aucun capteur disponible.</div>
                        {% endfor %}
                    </div>
                </div>

                <!-- Historique des états -->
                <div>
                    <h3>Historique des états</h3>
                    <table class="table table-bordered">
                        <tbody>
                        {% for historique in histo %}
                            <tr>
                                <td>{{ historique.date|date('d/m/Y') }}</td>
                                <td>{{ historique.action.value }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="2">Aucun historique disponible.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <a href="#" class="btn btn-primary">Voir tout l'historique</a>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-9">
                <!-- Ajouter un commentaire -->
                <div class="mb-4">
                    <h3>Ajouter un commentaire</h3>
                    <form method="post" action="{{ path('app_sa_commentaire', {'id': SA.id}) }}">
                        <div class="mb-3">
                            <label for="nom_tech" class="form-label">Nom Tech</label>
                            <input type="text" id="nom_tech" name="nom_tech" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <textarea id="description" name="description" class="form-control" rows="3" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Ajouter un commentaire</button>
                    </form>
                </div>

                <!-- Liste des commentaires -->
                <div>
                    <h3>Commentaires</h3>
                    <div class="d-flex mb-2">
                        <input type="text" class="form-control me-2" placeholder="Rechercher">
                        <button class="btn btn-secondary">Trier</button>
                    </div>
                    <table class="table table-bordered">
                        <thead class="table-dark">
                        <tr>
                            <th>Tech</th>
                            <th>Date</th>
                            <th>Contenu</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for commentaire in SA.getCommentaire %}
                            <tr>
                                <td>nom</td>
                                <td>{{ commentaire.dateAjout|date('d/m/Y') }}</td>
                                <td>{{ commentaire.description }}</td>
                                <td>
                                    <form method="post" action="{{ path('app_sa_commentaire_supprimer', {'id': SA.id, 'commentaireId': commentaire.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire ?');">
                                        <input type="hidden" name="_token" value="{{ commentaire.id }}">
                                        <button type="submit" class="btn btn-danger">Supprimer</button>
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">Aucun commentaire disponible.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <a href="#" class="btn btn-primary">Voir plus</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}