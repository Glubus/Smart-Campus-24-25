{% extends 'base.html.twig' %}

{% block title %}Liste de Sa{% endblock %}
{% block body %}
    <link rel="stylesheet" href="{{ asset('/styles/listeSalles.css') }}">
    <h1 class="mainTitle">Liste de Sa </h1>
    <div class="all">

        <aside class="rechercheBlock">
            <h2 class="titreRecherche">Rechercher</h2>
            <article class="filtresRecherche">
                <div class="barreRech">
                    {{ form_start(form, {'attr': {'class': 'd-flex'}}) }}
                    <div class="form-group mr-2">
                        {{ form_row(form.nom) }}
                    </div>
                    <button type="submit" class="btn btn-primary">Rechercher</button>
                    {{ form_end(form) }}
                </div>
                <h3 class="trier">Trier</h3>
                <button class="btnTri">Date de création</button>
                <button class="btnTri">Ordre alphabétique</button>
            </article>
        </aside>

        <main class="liste">
            <h2 class="titreListe">Résultats</h2>

            <div class="btns">
                <a href="{{ path('app_sa_ajout') }}"><button class="btnAjout">Ajouter</button></a>
                <button class="btnSuppr hidden" id="btnSuppr">Supprimer</button>
            </div>

            <article class="salles">
                {% for sa in liste_SA %}

                    <article class="salleBlock">
                        <div class="infossalle">
                            <input type="checkbox" class="checkbox" value="{{ sa.id }}"/>
                            <div class="saSaNom" >
                                <h3>{{ sa.nom }}</h3>
                            </div>
                        </div>

                        <div class="DetailsModif">{# $wa #}
                            <a href=/sa/{{sa.id}}><button class="btnDetailSA">Détails SA</button></a>
                            <a href="/modifiersa?id="{{ sa.id }}><button class="btnModif">Modifier</button></a>
                        </div>
                    </article>

                {% endfor %}
            </article>
            <button class="btnAffPl">Afficher plus</button>
        </main>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const checkboxes = document.querySelectorAll('.checkbox');
            const deleteButton = document.getElementById('btnSuppr');

            function toggleDeleteButton() {
                const isAnyChecked = Array.from(checkboxes).some(checkbox => checkbox.checked);
                deleteButton.classList.toggle('hidden', !isAnyChecked);
            }

            checkboxes.forEach(checkbox => {
                checkbox.addEventListener('change', toggleDeleteButton);
            });

            deleteButton.addEventListener('click', () => {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action =  '/sa/supprimer-selection'; // L'URL vers votre route Symfony

                checkboxes.forEach(checkbox => {
                    if (checkbox.checked) {
                        const input = document.createElement('input');
                        input.type = 'hidden';
                        input.name = 'selected_sa[]';
                        input.value = checkbox.value;
                        form.appendChild(input);
                    }
                });

                document.body.appendChild(form);
                form.submit();
            });

            toggleDeleteButton();
        });
    </script>
{% endblock %}